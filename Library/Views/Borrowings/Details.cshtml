@model Library.Borrowings

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Borrowings</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Borrowdate)*@
            Borrow date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Borrowdate)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Expirationdate)*@
            Expiration date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Expirationdate)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Returndate)*@
            Return date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Returndate)
        </dd>
        @if (ViewBag.UserRole == "librarian")
        {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Profile)
        </dt>
       
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profile.Profileid)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sample)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sample.Id)
        </dd>
        }
    </dl>
</div>
<div>
    @if (ViewBag.UserRole == "librarian") {
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
    }
    <a asp-action="Index">Back to List</a>
</div>
