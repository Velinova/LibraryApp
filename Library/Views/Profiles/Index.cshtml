@model IEnumerable<Library.Profiles>

@{
    ViewData["Title"] = "Index";
}

<h1>Profiles</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
               Surname
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Profilename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
